#post_show.row
	.col-md-8.col-md-offset-2
		.panel.panel-default
			.panel-heading.post_image
				= image_tag @post.image.url
			.panel-body
				%h1= @post.title
				%p.description= @post.description.html_safe
			.panel-tag
				- if @post.tag_list.size > 0
					.tag_list= fa_icon('tags') + " " + tag_icons(@post.tag_list)
			.panel-footer
				.row
					.col-md-6
						%p.user
						.round-image-thumb= image_tag(@post.user.avatar.url(:thumb))
						- if @post.user.name
							= link_to @post.user.name, @post.user
						- else
							= link_to "DoThis Man", @post.user
					.col-md-6
						.btn-group.pull-right
							= link_to like_post_path(@post), method: :put, class: "btn btn-default" do
								%span.glyphicon.glyphicon-heart
									= @post.get_upvotes.size
							- if user_signed_in?
								= link_to "수정", edit_post_path, class: "btn btn-default"
								= link_to "삭제", post_path, method: :delete, data: { confirm: "정말로 삭제 하시겠습니까?" }, class: "btn btn-default"
							= link_to "뒤로가기", root_path, class: "btn btn-default"
			#comments
				%h2.comment_count
				댓글 수
				= @post.comments.count
				- @comments.each do |comment|
					.comment
						.round-image-thumb= image_tag(comment.user.avatar.url(:thumb))
						%p.username= comment.user.name
						%p.content= comment.content

				= render 'comments/comments'