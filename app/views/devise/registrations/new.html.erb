<div class="col-md-6 col-md-offset-3">
  <div class="row">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h2>회원가입</h2>
      </div>
      <div class="panel-body">
      	<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
				  <%= devise_error_messages! %>

				  <!--<div class="form-group">
				  	<%= f.label :닉네임 %><br />
				  	<%= f.text_field :name, required: true, autofocus: true, class: "form-control" %>
				  </div>-->

				  <div class="form-group">
				  	<%= f.label :email %><br />
				  	<%= f.email_field :email, required: true, class: "form-control" %>
				  </div>

				  <div class="form-group">
				  	<%= f.label :비밀번호 %> <% if @validatable %><i>(<%= @minimum_password_length %> characters minimum)</i><% end %><br />
				    <%= f.password_field :password, required: true, autocomplete: "off", class: "form-control" %>
				  </div>

				  <div class="form-group">
				  	<%= f.label :비밀번호확인 %><br />
				    <%= f.password_field :password_confirmation, required: true, autocomplete: "off", class: "form-control" %>
				  </div>

				  <div class="form-group">
				  	<%= f.submit "가입하기", class: "btn btn-primary" %>
				  </div>
				<% end %>

				<%= render "devise/shared/links" %>
      </div>
		</div>
	</div>
</div>
